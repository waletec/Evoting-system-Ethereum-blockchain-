# Ethereum Configuration for Remote Ubuntu Server
# Copy this file to .env and fill in your values

# Remote Server Configuration
REMOTE_NODE_URL=http://your-server-ip:8545
REMOTE_CHAIN_ID=1337

# Contract address (will be auto-populated after deployment)
CONTRACT_ADDRESS=

# Private key for transactions (for testing only)
# IMPORTANT: Never commit this to version control
PRIVATE_KEY=your_private_key_here

# Network configuration
NETWORK_URL=http://127.0.0.1:8545
CHAIN_ID=31337
